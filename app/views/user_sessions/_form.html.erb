<%= form_tag user_sessions_path, :method => :post, class: 'form-group' do %>

    <div class="signup-field">
      <%= text_field_tag :name, nil, class: 'form-control', placeholder: 'Name' %>
    </div>

    <div class="signin-field">
      <%= password_field_tag :password, nil, class: 'form-control', placeholder: 'Password' %>
    </div>

    <div class="actions">
      <%= submit_tag "Login", class: 'btn btn-primary signin-submit' %>
    </div>
<% end %>