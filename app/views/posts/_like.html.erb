<%= link_to like_post_path(post.id), method: :put, id:"like-#{post.id}", remote: true do %>
    <% if post.has_like(current_user) %>
        <i class = "fa fa-heart fa-2x" style = "color:red"></i>
    <% else %>
        <i class = "fa fa-heart-o fa-2x" style = "color:gray"></i>
    <%end %>
<% end %>